generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model AdminUser {
  id            String         @id @default(uuid())
  email         String         @unique
  username      String?        @unique
  password      String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  adminSessions AdminSession[]
}

model Customer {
  id        String   @id @default(uuid())
  phone     String   @unique
  name      String?
  email     String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders Order[]
}

model OTPCode {
  id        String   @id @default(uuid())
  phone     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([phone])
  @@index([expiresAt])
}

model Product {
  id          String    @id @default(uuid())
  slug        String    @unique
  title       String    @unique
  description String?
  price       Int
  images      String[]  @default([])
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  variants    Variant[]
  stock       Int       @default(0)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  orderItems  OrderItem[]

  @@index([categoryId])
  @@index([isActive])
}

model Variant {
  id         String      @id @default(uuid())
  name       String
  value      String
  productId  String
  product    Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]

  @@index([productId])
}

model Category {
  id       String    @id @default(uuid())
  name     String    @unique
  products Product[]
}

model Order {
  id          String @id @default(uuid())
  orderNumber Int    @unique @default(autoincrement())

  customerId String?
  customer   Customer? @relation(fields: [customerId], references: [id], onDelete: SetNull)

  items        OrderItem[]
  totalAmount  Int
  status       OrderStatus  @default(PENDING)
  deliveryType DeliveryType @default(MEET_UP)

  fullName   String?
  address    String?
  postalCode String?
  city       String?
  province   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  mpPaymentId String?
  mpStatus    String?

  @@index([customerId])
  @@index([status])
  @@index([createdAt])
  @@index([status, createdAt])
}


model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  variantId String?
  variant   Variant? @relation(fields: [variantId], references: [id])
  quantity  Int      @default(1)
  price     Int

  @@index([orderId])
  @@index([productId])
  @@index([variantId])
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
  FAILED
}

enum DeliveryType {
  MEET_UP
  SHIPPING
}

model AdminSession {
  id           String    @id @default(uuid())
  sessionToken String    @unique
  adminUserId  String
  adminUser    AdminUser @relation(fields: [adminUserId], references: [id], onDelete: Cascade)
  expires      DateTime

  @@index([adminUserId])
}
